<UserControl x:Class="UI.BoolButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" Height="20" Width="40">
    <Grid>
        <Rectangle Fill="SkyBlue" Margin="2,6,2,6"/>
        <Ellipse x:Name="False" Stroke="SkyBlue" Fill="White" MouseDown="False_MouseDown" Opacity="1" Margin="0,0,20,0"/>
        <Ellipse x:Name="True" Stroke="SkyBlue" Fill="White" MouseDown="True_MouseDown" Opacity="0" Margin="20,0,0,0"/>
    </Grid>
</UserControl>
