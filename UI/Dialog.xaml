<UserControl x:Class="UI.Dialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <Border Background="White" CornerRadius="15" BorderBrush="SkyBlue" BorderThickness="4">
        <Grid Margin="10,10,10,10">
            <Rectangle x:Name="Mask" Fill="White" Margin="0,0,0,0" Opacity="0.95"/>
            <TextBlock x:Name="title" Margin="0,0,0,231" FontSize="36" FontWeight="Bold"/>
            <TextBlock x:Name="con" Margin="0,50,0,70" FontSize="22" TextWrapping="Wrap"/>
            <local:NiceButton x:Name="Button1" Margin="0,222,10,0" HorizontalAlignment="Right" Width="115" Height="50" VerticalAlignment="Top" OnClick="Button1_OnClick"/>
            <local:NiceButton x:Name="Button2" Margin="0,222,145,0" HorizontalAlignment="Right" Width="115" Height="50" VerticalAlignment="Top" OnClick="Button2_OnClick"/>
            <local:NiceButton x:Name="Button3" Margin="0,222,280,0" HorizontalAlignment="Right" Width="115" Height="50" VerticalAlignment="Top" OnClick="Button3_OnClick"/>
        </Grid>
    </Border>
</UserControl>
